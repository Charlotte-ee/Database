UOS_VU_PERSONAL_TUTORS_BY_STUDENT
CREATE OR REPLACE VIEW "PERSONAL_TUTORS_BY_STUDENT"
AS SELECT
STAFF.FIRST_NAME AS "FIRST NAME",
STAFF.LAST_NAME AS "LAST NAME",
TITLE_LOOK_UP.TITLE_NAME AS "TITLE"
FROM STUDENT,STUDENT_TUTOR,STAFF,TITLE_LOOK_UP
WHERE
STUDENT_TUTOR.TUTOR_ID=STAFF.STAFF_ID
AND STUDENT_TUTOR.STUDENT_ID=STUDENT.STUDENT_ID
AND TITLE_LOOK_UP.TITLE_ID=STAFF.TITLE_ID
ORDER BY STUDENT.LAST_NAME
